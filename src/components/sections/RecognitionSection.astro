---
import UnderlineBrush from "../visual/animation/UnderlineBrush";
import SplitHeroVideo from '../visual/SplitHeroVideo.tsx';
import FadeDownOnScroll from "../visual/animation/FadeDownOnScroll";
import TypewriterText from "../visual/animation/TypeWriterText";
const { id = 'kolleg-hero' } = Astro.props;
---
<section
    id={id}
    class="relative w-full min-h-screen grid grid-rows-[1fr_auto] bg-transparent"
>
  <!-- Glass-Overlay -->
  <div class="absolute inset-0 z-0 backdrop-glass"></div>
  <!-- Desktop Grid: 1/3 Text – 2/3 Video -->
  <div
      class="hidden absolute inset-0 lg:grid lg:grid-cols-[1.75fr_1.25fr] items-center
           w-full max-w-7xl mx-auto gap-10 px-8"
  >
    <!-- ➡VIDEO (2/3) -->
    <div class="relative w-full
                flex items-center justify-center
                rounded-3xl overflow-hidden shadow-2xl">
      <SplitHeroVideo
          client:visible
          className="w-full h-auto max-h-[70vh] object-contain"
      src={`${import.meta.env.BASE_URL}videos/kolleg-hls/anerkennung.m3u8`}
      />
    </div>

    <!-- TEXT (1/3) -->
    <FadeDownOnScroll client:visible>
    <div class="flex flex-col gap-10 max-lg:py-16">
      <h1
          class="text-[8vw] sm:text-4xl md:text-5xl lg:text-6xl font-headline font-bold"
      >
        Was ist ein&nbsp;
        <span class="relative inline-block text-[11vw] sm:text-6xl md:text-7xl lg:text-8xl">
        <span class="relative z-[1] text-primary lg:pr-5 pr-2.5">Kolleg</span>
          <UnderlineBrush
              className="hidden lg:block absolute left-0 bottom-1 z-0 w-full"
              fillColor="#BBF451"
              bottomOffset={6}
          />
        </span>
        ?
      </h1>

      <p class="text-lg sm:text-xl max-w-md leading-relaxed">
        Im Video erfährst du kurz und klar, was ein Kolleg ist und wie die Ausbildung abläuft.
      </p>

      <div class="flex flex-col sm:flex-row gap-4">
        <a
            href="#kollegs"
            class="bg-accent font-bold px-8 py-4 rounded-full shadow-md
                 border-2 border-transparent text-center"
        >
          Kollegs entdecken
        </a>
        <a
            href="#kontakt"
            class="inline-block bg-white text-primary font-bold border
           border-primary px-8 py-4 rounded-full shadow-md
           hover:bg-primary hover:text-white transition-colors"
        >
          Noch&nbsp;Fragen?
        </a>
      </div>
    </div>
    </FadeDownOnScroll>
  </div>

    <!-- Mobile View -->
  <div class="flex lg:hidden z-10 w-full min-h-full flex-col justify-center px-6">
      <div class="w-full text-center mt-16">
        <h1 class="text-[8vw] sm:text-4xl md:text-5xl font-headline font-bold mb-6">
          Was ist ein
          <span class="relative inline-block text-[11vw] sm:text-6xl md:text-7xl text-primary">
          <span class="relative z-[1]">Kolleg</span>
          <UnderlineBrush
              className="absolute left-0 bottom-1 z-0 w-full"
              fillColor="#BBF451"
              bottomOffset={6}
          />
        </span>
          ?
        </h1>

        <p class="text-lg sm:text-xl leading-relaxed mb-6">
          Im Video erfährst du kurz und klar, was ein Kolleg ist und wie die Ausbildung abläuft.
        </p>
      </div>

      <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
        <a
            href={`${import.meta.env.BASE_URL}#vorteile`}
            class="bg-accent font-bold px-8 py-4 rounded-full shadow-md border-2 border-transparent text-center"
        >
          Kollegs entdecken
        </a>
        <a
            href={`${import.meta.env.BASE_URL}#kollegs`}
            class="inline-block bg-white text-primary font-bold border border-primary px-8 py-4 rounded-full shadow-md text-center"
        >
          Noch&nbsp;Fragen?
        </a>
      </div>

    <div class="relative w-full
                flex items-center justify-center
                rounded-3xl shadow-2xl my-16">
      <SplitHeroVideo
          client:visible
          className="w-full h-auto max-h-[70vh] object-contain"
          src={`${import.meta.env.BASE_URL}videos/kolleg-hls/anerkennung.m3u8`}
      />
    </div>
  </div>
</section>