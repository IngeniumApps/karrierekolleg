<section id="contact" class="min-h-dvh bg-transparent flex items-center justify-center">
    <div class="max-w-3xl mx-auto px-4 text-center bg-white">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Kontakt</h2>
        <p class="text-gray-600 mb-8">Schreib uns gerne bei Fragen oder fÃ¼r eine Beratung.</p>
        <form class="grid gap-4">
            <input type="text" name="name" placeholder="Dein Name" required class="p-3 border rounded" />
            <input type="email" name="email" placeholder="Deine E-Mail" required class="p-3 border rounded" />
            <textarea name="message" placeholder="Deine Nachricht" rows="4" required class="p-3 border rounded"></textarea>
            <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded hover:bg-blue-700 transition">Absenden</button>
        </form>
    </div>
</section>