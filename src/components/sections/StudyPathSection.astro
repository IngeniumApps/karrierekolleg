---
import StudyPathContent from "./StudyPathContent";
const { id } = Astro.props;
---

<section id={id} class="relative w-full h-screen flex items-center justify-center bg-white">
  <!-- Gradient-Background -->
  <div
      class="absolute inset-0 z-0"
      style="background: radial-gradient(ellipse at top right, #1b95cc44, transparent 90%); will-change: transform;"
  ></div>

  <!-- Glass-Overlay -->
  <div class="absolute inset-0 z-0 backdrop-glass"></div>
  <StudyPathContent client:visible/>
</section>
