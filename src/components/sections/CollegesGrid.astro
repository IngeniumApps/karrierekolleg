type Topic = "Technik & Informatik" | "Design" | "Bau & Architektur" | "Naturwissenschaft";

const topicColors: Record<Topic, string> = {
  "Technik & Informatik": "primary",
  "Design": "pink",
  "Bau & Architektur": "orange",
  "Naturwissenschaft": "red",
};
