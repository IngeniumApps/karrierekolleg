---
import {colleges} from "../../constants/colleges";
import CollegeCard from "../CollegeCard";
const { id } = Astro.props;
---
<section id={id} class="py-24 px-6 bg-gradient-to-br from-white via-[#f0f8ff] to-white">
  <div class="max-w-7xl mx-auto text-center">
    <h2 class="text-4xl sm:text-5xl font-headline font-bold text-primary mb-4">Kollegs entdecken</h2>
    <p class="text-lg text-gray-600 mb-12">Wähle das Kolleg, das zu dir passt – von Technik bis Design.</p>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {colleges.map((colleg) => (
          <CollegeCard
              name={colleg.name}
              topic={colleg.topic}
              link={colleg.link}
              color={colleg.color}
          />
      ))}
    </div>
  </div>
</section>